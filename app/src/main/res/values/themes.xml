<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DragonBallAndroidFundamentos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DragonBallAndroidFundamentos.EditText" parent="Theme.DragonBallAndroidFundamentos">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
        <item name="android:layout_marginVertical">@dimen/margin_small</item>
        <item name="android:ems">10</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textColorHint">@color/black</item>
    </style>


    <style name="Theme.DragonBallAndroidFundamentos.TextViewTitle" parent="Theme.DragonBallAndroidFundamentos">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_small</item>
        <item name="android:layout_marginVertical">@dimen/margin_big</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:fontFamily">@font/begok</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.DragonBallAndroidFundamentos.CardView" parent="Theme.DragonBallAndroidFundamentos">
        <item name="android:layout_marginHorizontal">@dimen/margin_small</item>
        <item name="android:layout_marginVertical">@dimen/super_margin_top</item>

        <item name="android:backgroundTint">@color/blue_semitransparent</item>
        <item name="android:gravity">center</item>
    </style>
</resources>